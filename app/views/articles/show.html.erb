<div class="container">
    <p id="notice" class="notice"><h4><%= notice %></h4></p>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-8">
                <div class="card">
                    <div class="card-block">
                        <h1 class="card-title custom-title"><%= @markdown.render(@article.title).html_safe %></h1>
                        <p class="card-text"><%= @markdown.render(@article.body).html_safe %></p>
                    </div>
                </div>
        </div>
    </div>

</div>
<div class="container">
    <h4>Comments</h4>
    <div class="row">
        <div class="col-sm-8">
            <div class="card comments">
                <% @article.comments.each do |comment| %>
                <div class="card-block">
                    <div class="card-title">
                        <%= @markdown.render('![animal](http://placeimg.com/50/50/nature) ' + comment.commenter).html_safe %>
                    </div>
                    <div class="card-text"><%= @markdown.render(comment.body).html_safe %></div>
                    <div class="card-text custom-link">

                        <%= link_to 'Destroy Comment', [comment.article, comment],
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <h4>Add a comment:</h4>
    <div class="row">
        <div class="col-sm-8">
            
            <div class="card comments">
                
                <div class="card-block">
                    <%= form_for([@article, @article.comments.build]) do |f| %>
                    <div class="form-group row">
                        <label class="col-sm-2 form-control-label">Commenter</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="comment[commenter]" id="comment_commenter">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 form-control-label">Body</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" name="comment[body]" id="comment_body"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-offset-2 col-sm-10">
                          <input class="btn btn-success" type="submit" name="commit" value="Create Comment">
                        </div>
                      </div>
                      <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-footer">
                    <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary' %>
                    <%= link_to 'Back', articles_path, class: 'btn btn-warning' %>
                </div>
            </div>
        </div>
    </div>
</div>