<div class="container">
<h1>Menu</h1>
<div class="dropdown">
  <button class="btn btn-default dropdown-toggle v-bg" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Order by
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <% @orders.each do |order| %>
		<li>
			<%= link_to order, menu_path(order: order, section: "#{params[:section]}"), class: "nav-link #{params[:order] == order && 'active'}" %>
		
		</li>
		<% end %>
  </ul>
</div>
	<ul class="nav nav-pills">
		<li class="nav-item">
			
			<%= link_to 'All', menu_path(order: "#{params[:order]}"), class: "nav-link #{!params[:section].present? && 'active'}" %>
		
		</li>
		<% @sections.each do |section| %>
		<li class="nav-item">
			<%= link_to section, menu_path(order: "#{params[:order]}", section: section), class: "nav-link #{params[:section] == section && 'active'}" %>
		
		</li>
		<% end %>
	</ul>
	<% @food_items.each do |food_item| %>
    <div class="row">
	    <div class="col-sm-8">
	        <div class="card">
	            <div class="card-block">
	                <h4 class="card-title"><%= food_item.name %></h4>
	                <%= image_tag food_item.image_url_or_auto %>
	            </div>
	            <div class="card-footer">
			        <%= link_to 'Edit', edit_food_item_path(food_item), class: 'btn v-btn' %>
			        <%= link_to 'Show', food_item, class: 'btn v-btn' %>
			        <%= link_to 'Destroy', food_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn v-btn' %>
			    </div>
	        </div>
	    </div>
	</div>

	<% end %>
	<%= paginate @food_items %>
	<div class="custom_link_new">
			<%= link_to 'New Item', new_food_item_path %>
	</div>
</div>
