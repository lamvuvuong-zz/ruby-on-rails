	    &#9776;
		</button>
		<div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2">
			<%= link_to 'Nhà Hàng Sáng', root_path, class: 'navbar-brand' %>
			<ul class="nav navbar-nav">
				<li class="nav-item">
					<%= link_to 'Menu', menu_path, class: 'nav-link' %>
				</li>
				<li class="nav-item">
					<%= link_to 'Contact Us', contact_us_path, class: 'nav-link' %>
				</li>
			</ul>
			<ul class="nav navbar-nav v-navbar-right">
				<!-- <li class="nav-item">
					<a class="nav-link" href="/food_items">Order</a>
				</li> -->
				<li class="nav-item">
					<%= link_to 'Items', '#', class: 'nav-link' %>
				</li>
			</ul>
		</div>
	</nav>
</div>
<div class="container">
    <p id="notice" class="notice"></p><h4></h4><p></p>
</div>
<div class="container">
	<%= yield %>
</div>
</body>
</html>
